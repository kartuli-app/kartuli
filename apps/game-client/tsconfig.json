{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@kartuli/ui/*": ["../../packages/ui/src/*"],
      "@/*": ["./src/*"],
      "@shared/*": ["./src/domains/shared/*"],
      "@app/*": ["./src/domains/app/*"],
      "@info/*": ["./src/domains/info/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/setupTests.ts",
    "vitest.config.ts",
    ".storybook/**"
  ]
}
