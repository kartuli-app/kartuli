{
  "private": true,
  "name": "kartuli",
  "engines": {
    "node": ">=20.12.2 <21"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter='!@kartuli/web-docs-client'",
    "build:docs": "vitepress build tools/web-docs-client",
    "test": "turbo run test --filter='!@kartuli/e2e'",
    "test:e2e": "pnpm --filter @kartuli/e2e test",
    "test:e2e:ui": "pnpm --filter @kartuli/e2e test:ui",
    "lighthouse": "lhci autorun",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --write",
    "typecheck": "turbo run typecheck",
    "docs:dev": "vitepress dev tools/web-docs-client",
    "docs:build": "vitepress build tools/web-docs-client",
    "docs:preview": "vitepress preview tools/web-docs-client",
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || echo 'Skipping lefthook install (not in git repo)'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@lhci/cli": "^0.12.0",
    "lefthook": "^1.6.0",
    "turbo": "^2.0.0",
    "vitepress": "catalog:"
  }
}
