{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": { "enabled": true },
  "globalEnv": ["ENABLE_EXPERIMENTAL_COREPACK"],
  "tasks": {
    "dev": { "cache": false, "persistent": true },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [
        "dist/**",
        "build/**",
        "lib/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        ".vitepress/dist/**"
      ]
    },
    "@kartuli/web-docs-client#build": {
      "inputs": ["$TURBO_DEFAULT$", "pnpm-lock.yaml", "../../docs/**", "scripts/**"],
      "outputs": [".vitepress/dist/**"]
    },
    "test": {},
    "test:e2e": { "cache": false, "dependsOn": [] },
    "lint": {
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.json",
        "biome.json",
        "pnpm-lock.yaml"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        "tsconfig.json",
        "tsconfig.*.json",
        "package.json",
        "pnpm-lock.yaml"
      ],
      "outputs": []
    },
    "preview": { "cache": false, "persistent": true }
  }
}
